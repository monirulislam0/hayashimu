            @endforeach
        </div>
        <div class="carousel-inner">
            @php $sl=0 @endphp
            @foreach($top_sliders as $slider)
                @php $sl++ @endphp
            <div class="carousel-item {{ ($sl==1)?'active':'' }}">
                <a href="#"><img src="{{ asset('storage/'.$slider->image) }}" class="d-block w-100" alt="{{ $slider->title }}"></a>
            </div>
            @endforeach
        </div>
