   <div class="main-body">
    <div class="second-carousel-container">
        <div id="carouselSecondIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-pause="none">
            <div class="carousel-indicators square">
                @for($i = 0; $i < ceil(count($down_sliders) / 2); $i++)
                    <button type="button" data-bs-target="#carouselSecondIndicators" data-bs-slide-to="{{ $i }}" class="{{ $i === 0 ? 'active' : '' }}" aria-current="{{ $i === 0 ? 'true' : 'false' }}" aria-label="Slide {{ $i + 1 }}"></button>
                @endfor
            </div>
            <div class="carousel-inner">
                @for($i = 0; $i < count($down_sliders); $i += 2)
                    <div class="carousel-item {{ $i === 0 ? 'active' : '' }}">
                        <div class="d-flex gap-2 mb-5">
                            <div>
                                <a href="#"><img src="{{ asset('storage/'.$down_sliders[1]['image']) }}" class="d-block w-100" alt="..."></a>
                            </div>
                            @if($i + 1 < count($down_sliders))
                                <div>
                                    <a href="#"><img src="{{ asset('storage/'.$down_sliders[$i + 1]['image']) }}" class="d-block w-100" alt="..."></a>
                                </div>
                            @endif
                        </div>
                    </div>
                @endfor
            </div>
        </div>
    </div>
